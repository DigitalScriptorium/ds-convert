</marc:datafield>
    <marc:datafield ind1="0" ind2=" " tag="505">
  <marc:subfield code="a">2. f.v recto-xii verso:  [Table of contents]</marc:subfield>
</marc:datafield>
    <marc:datafield ind1="0" ind2=" " tag="505">
